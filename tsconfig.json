{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es5",
    "module": "es2020",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": ".",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@pages/*": ["./src/pages/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"]
    }
  }
}
